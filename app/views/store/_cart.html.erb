<h3>košík</h3>
<table> 
	
	<%- form_tag :action => 'update_cart' do -%>
		<%= render :partial => 'cart_item', :collection => cart.items %>
	<%- end -%>
	
<tr class="total"> 
	<td>Celkem s DPH</td> 
	<td class="right"><%= currency(cart.total_price) %></td> 
</tr> 
</table> 

<%= button_to "Checkout", :action => :checkout %>

<%- form_remote_tag :url => { :action => 'empty_cart' } do -%>
	<%= submit_tag "Vyprázdnit" %>
<%- end -%>